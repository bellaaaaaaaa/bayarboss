<div class='container'>
    <div class='pt-2 mt-5'style="display: flex; flex-direction: column; justify-content: center; align-items: center;">
        <img src=<%= @user.image_url(:thumb).to_s %> style="width:8rem; border-radius:65px;"><br>
        <h2><%= @user.username %></h2><br>
            <!-- Button trigger modal -->
    <% if @user.id == current_user.id %>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
        Edit
        </button>
    <% end %>

    <!-- Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <%= form_for @user, :html => {:multipart => true}, local: true do |form| %>
                <p>
                    <%= form.label :"username" %><br>
                    <%= form.text_field :username %>
                </p>
                <p>
                    <%= form.file_field :image %>
                    <%= form.button :submit => "", class: "btn btn-primary btn-xs" %>
                </p>
            <% end %>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
        </div>
        </div>
    </div>
    </div>
    </div>

    <div class='container' style='margin:auto;'>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" style="display:flex; justify-content:center;">
            <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="#" >Info | History</a>
            </li>
            <li class="nav-item">
                <%= link_to "Items", my_items_path(@user.id), remote: true, class:'nav-link' %>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Reviews</a>
            <% if @user.id == current_user.id %>
                </li>
                    <%= link_to "Sell", new_item_path(current_user.id), remote: true, class:'nav-link' %>
                </li>
            <% end %>
            </ul>
        </div>
        </nav>
    </div>
    <div id="new_item">
    </div>
</div>

