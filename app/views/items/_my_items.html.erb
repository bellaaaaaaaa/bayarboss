<div class='mt-3' style="padding-left:15px; padding-right:15px;">
    <%= @my_items.each do |item| %>
    <div class="card flex-row flex-wrap mb-4">
            <div class="card-header border-0">
                <img src=<%= item.image_url(:thumb).to_s %> alt="">
            </div>
            <div class="card-block px-2">
                <h4 class="card-title"> <%= item.name %> </h4>
                <p class="card-text"> <strong>$</strong> <%= item.price %>.00 </p>
                <p class="card-text"> <strong>Description</strong> <%= item.description %> </p>
                <p class="card-text"> <strong>Condition</strong> <%= item.condition %> </p>

            </div>
            <div class="w-100"></div>
            <div class="card-footer w-100 text-muted">
            <%= link_to 'View', item_path(item.id)%>
            </div>
        </div>
    <% end %>
</div>

